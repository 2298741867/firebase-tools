{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"module": "nodenext",
		"strict": true,
		"outDir": "lib",
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2018",
		"sourceMap": true,
		"skipLibCheck": true,
		"typeRoots": ["node_modules/@types", "src/types"],
		"moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
	},
	"lib": ["dom", "dom.iterable", "ES2020"],
	"include": ["src/**/*"],
	"exclude": ["src/dynamicImport.js"]
}