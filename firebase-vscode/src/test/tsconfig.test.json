{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "outDir": "../../dist/test",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "rootDirs": ["../", "../../../src", "../../common"],
    "jsx": "react",
    /* Cannot be enabled until we enable it in the root tsconfig.json */
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "@wdio/globals/types", "@wdio/mocha-framework"]
  },
  "exclude": ["**/*.test.ts"],
  "include": ["../**/*", "../../common/**/*"]
}
